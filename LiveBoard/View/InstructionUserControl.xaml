<UserControl
    x:Class="LiveBoard.View.InstructionUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveBoard.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
	x:Name="root">

	<Grid>
		<Border BorderThickness="8" Padding="10" Background="{StaticResource AppBarBackgroundThemeBrush}">
			<Border.BorderBrush>
				<SolidColorBrush Color="{StaticResource LbLightGrayColor}"/>
			</Border.BorderBrush>
			<TextBlock FontSize="13" Text="{Binding ElementName=root, Path=Text}" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center">
				<TextBlock.Foreground>
					<SolidColorBrush Color="{StaticResource LbDarkTextColor}"/>
				</TextBlock.Foreground>
			</TextBlock>
		</Border>
	</Grid>
</UserControl>
