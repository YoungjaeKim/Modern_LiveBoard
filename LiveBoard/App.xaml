				<ResourceDictionary Source="Styles/StandardStyles.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<!-- Application-specific resources -->
			<String x:Key="AppName" xmlns="http://schemas.microsoft.com/winfx/2006/xaml">Live Board</String>
			<viewModel:ViewModelLocator x:Key="Locator" xmlns="clr-namespace:BapulMetro.ViewModel" />
