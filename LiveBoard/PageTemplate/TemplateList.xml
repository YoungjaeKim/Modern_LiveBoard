<?xml version="1.0" encoding="utf-8" ?>
<LiveBoardTemplates>
	<!-- 한 줄 출력 -->
	<Template Key="SingleStringPage" DisplayName="1-line text" Description="Show single line of text" TemplateView="SimpleText" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Text" Name="Text" ValueType="String" DefaultValue="" />
		</DataList>
	</Template>
	<!-- 웹뷰 -->
	<Template Key="StaticWebView" DisplayName="Web browser" Description="Show web page as a screen-captured manner" TemplateView="StaticWebView" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Url" Name="Header" ValueType="String" DefaultValue="" />
		</DataList>
	</Template>
	<!-- 한장 이미지 출력 -->
	<Template Key="SingleUrlImage" DisplayName="Simple image view" Description="Show single image" TemplateView="SimpleUrlImage" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Url" Name="Image Location (URL)" ValueType="String" DefaultValue="" />
		</DataList>
	</Template>
	<!-- 카운트다운 -->
	<Template Key="Countdown" DisplayName="Countdown" Description="Show number to count down per 1 second to zero" TemplateView="OneNumberCount" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Number" Name="Initial number" ValueType="Int" DefaultValue="5" />
		</DataList>
	</Template>
