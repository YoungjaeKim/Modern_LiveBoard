	<!-- RSS 목록 출력 -->
	<Template Key="RssList" DisplayName="RSS" Description="Header and 10 titles from RSS" TemplateView="SimpleList" TemplateModel="RssList">
		<DataList>
			<Data Key="Header" Name="Title" ValueType="String" DefaultValue="" />
			<Data Key="RSS" Name="RSS Address" ValueType="String" DefaultValue="http://v.daum.net/best/rss" />
			<Data Key="Feeds" Name="Feed List" ValueType="System.Collections.Generic.IEnumerable`1[System.String]" DefaultValue="" IsHidden="True" />
		</DataList>
	</Template>
	<Template Key="FacebookLike" DisplayName="Facebook Like count" Description="Show 'Like' count of a Facebook page" TemplateView="FacebookCount" TemplateModel="FacebookLikeCountPage">
		<DataList>
			<Data Key="Page" Name="Page Name" ValueType="String" DefaultValue="windows" />
			<Data Key="Title" Name="Title" ValueType="String" DefaultValue="Windows Facebook Page" />
			<Data Key="Count" Name="Count" ValueType="Int" DefaultValue="0" IsHidden="True" />
		</DataList>
	</Template>
