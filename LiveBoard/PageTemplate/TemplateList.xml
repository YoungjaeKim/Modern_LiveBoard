<LiveBoardTemplates>
	<!-- 한 줄 출력 -->
	<Template Key="SingleStringPage" Name="1-line text" Description="Show single line of text"
			  TemplateView="SimpleText" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Text" Name="Text" ValueType="String" DefaultValue="" Description=""
				  />
		</DataList>
	</Template>
	<!-- 웹뷰 -->
	<Template Key="StaticWebView" Name="Web browser" Description="Show web page as a screen-captured manner" 
			  TemplateView="StaticWebView" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Url" Name="Header" ValueType="String" DefaultValue="" Description="" />
		</DataList>
	</Template>
	<!-- 한장 이미지 출력 -->
	<Template Key="SingleUrlImage" Name="Simple image view" Description="Show single image" 
			  TemplateView="SimpleUrlImage" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Url" Name="Image Location (URL)" ValueType="String" DefaultValue="" Description="" />
		</DataList>
	</Template>
	<!-- 카운트다운 -->
	<Template Key="Countdown" Name="Countdown" Description="Show number to count down per 1 second to zero" 
			  TemplateView="OneNumberCount" TemplateModel="SingleStringPage">
		<DataList>
			<Data Key="Number" Name="Initial number" ValueType="Int" DefaultValue="5" Description="" />
		</DataList>
	</Template>
